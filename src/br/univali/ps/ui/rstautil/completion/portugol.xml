<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE api SYSTEM "CompletionXml.dtd">

<api language="Portugol">

    <environment paramStartChar="(" paramEndChar=")" paramSeparator=", " terminal=""/>

    <keywords>
        
        <keyword name="PI" type="constant" definedIn="Matematica">
            <desc>Valor da constante matemática PI.</desc>
        </keyword>
        
        <keyword name="potencia" type="function" returnType="real" definedIn="Matematica">
            <params>
                <param type="real" name="base">
                    <desc>Valor real utilizado como base</desc>
                </param>
                <param type="real" name="expoente">
                    <desc>Valor real utilizado como expoente</desc>
                </param>
            </params>
            <desc>Realiza uma exponenciação através da multiplicação da base por ela mesma tantas vezes quanto indicar o expoente.</desc>
            <returnValDesc><![CDATA[A exponenciação da <em>base</em> pelo <em>expoente</em>.]]></returnValDesc>
        </keyword>
        
        <keyword name="raiz" type="function" returnType="real" definedIn="Matematica">
            <params>
                <param type="real" name="n">
                    <desc>Valor real positivo utilizado como operando</desc>
                </param>
            </params>
            <desc>Calcula a raiz quadrada e um valor real. </desc>
            <returnValDesc><![CDATA[A raiz quadrada de <em>n</em>.]]></returnValDesc>
        </keyword>
        
    </keywords>
</api>